<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#36353d"

    tools:context=".MainActivity">

    <pl.droidsonroids.gif.GifImageView

        android:layout_width="600dp"
        android:layout_height="500dp"
        android:src="@drawable/sleep"
        android:id="@+id/ivSplash"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingClass" />




    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="369dp"
        android:layout_marginTop="0dp"
        android:id="@+id/gv_error"
        android:visibility="invisible"
        app:lottie_loop="true"
        app:lottie_fileName="swelcom.json"
        app:lottie_autoPlay="true"
        />


    <include
        layout="@layout/context_main"
        tools:layout_editor_absoluteX="-44dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/tvSplash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="1010dp"
        android:layout_marginBottom="109dp"

        android:fontFamily="@font/pistara"
        android:text="Record your sleep time"
        android:alpha="0.8"
        android:textColor="#ffffff"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/ivSplash"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.514" />

    <TextView
        android:id="@+id/tvSubSplash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="53dp"
        android:layout_marginTop="1830dp"
        android:layout_marginBottom="0dp"

        android:fontFamily="@font/delius"
        android:text="Hope you have a good night!"
        android:textColor="#A3A2AD"
        android:textSize="24sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/ivSplash"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivSplash" />

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="455dp"
        android:id="@+id/circle"
        app:lottie_fileName="circle1.json"
        android:layout_marginStart="135dp"
        app:lottie_autoPlay="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:id="@+id/btnget"
        android:layout_width="100dp"
        android:layout_centerHorizontal="true"
        android:layout_height="55dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="500dp"
        android:background="#36353d"
        android:fontFamily="@font/pistara"


        android:text="Record"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.airbnb.lottie.LottieAnimationView
        android:layout_marginTop="920dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="200dp"
        android:id="@+id/animation"
        app:lottie_loop="true"
        app:lottie_fileName="line.json"
        app:lottie_autoPlay="true"
        app:layout_constraintBottom_toTopOf="@+id/tvSplash"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"  />

    <TextView
        android:id="@+id/title_nightTalk"
        android:layout_width="210dp"
        android:layout_height="150dp"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"

        android:alpha="0.6"
        android:fontFamily="@font/neontype"
        android:text="Sleep"
        android:textAlignment="center"
        android:textColor="#FAFAFA"
        android:textSize="50dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-9dp" />
</androidx.constraintlayout.widget.ConstraintLayout>