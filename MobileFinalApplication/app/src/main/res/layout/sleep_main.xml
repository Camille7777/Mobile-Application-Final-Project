<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#36353d"

    tools:context=".MainActivity">

    <pl.droidsonroids.gif.GifImageView

        android:layout_width="600dp"
        android:layout_height="500dp"
        android:src="@drawable/sleep"
        android:id="@+id/ivSplash"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/composer_zyt"
        android:layout_width="222dp"
        android:layout_height="92dp"
        android:layout_above="@+id/imageView9"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="5dp"
        android:layout_toStartOf="@+id/logo_zyt"
        android:fontFamily="@font/chalkduster"
        android:text="Sleep"
        android:textColor="#D4D0BE"
        android:textSize="36sp" />


    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="369dp"
        android:layout_marginTop="0dp"
        android:id="@+id/gv_error"
        android:visibility="invisible"
        app:lottie_loop="true"
        app:lottie_fileName="swelcom.json"
        app:lottie_autoPlay="true"
        />


    <include layout="@layout/context_main" />


    <TextView
        android:id="@+id/tvSplash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="108dp"
        android:layout_marginTop="1010dp"
        android:layout_marginBottom="109dp"

        android:fontFamily="@font/pistara"
        android:text="Record your sleep time"

        android:textColor="#FF9372"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/ivSplash"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSubSplash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="53dp"
        android:layout_marginTop="1830dp"
        android:layout_marginBottom="0dp"

        android:fontFamily="@font/delius"
        android:text="Hope you have a good night!"
        android:textColor="#A3A2AD"
        android:textSize="24sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/ivSplash"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivSplash" />

    <Button
        android:id="@+id/btnget"
        android:layout_width="280dp"
        android:layout_height="55dp"
        android:layout_marginStart="72dp"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="500dp"
        android:background="#36353d"
        android:text="Record"


        android:fontFamily="@font/pistara"
        android:textAllCaps="false"
        android:textColor="#AF3555"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.airbnb.lottie.LottieAnimationView
        android:layout_marginTop="920dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="200dp"
        android:id="@+id/animation"
        app:lottie_loop="true"
        app:lottie_fileName="loading1.json"
        app:lottie_autoPlay="true"
        app:layout_constraintBottom_toTopOf="@+id/tvSplash"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"  />

</androidx.constraintlayout.widget.ConstraintLayout>